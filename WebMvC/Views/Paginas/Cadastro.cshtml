@{
    ViewBag.Title = "Paginas";

    List<Business.Pagina> paginas = ViewBag.Paginas;
}

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success">@TempData["Sucesso"]</div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"]</div>
}


<div class="jumbotron">
    <h1>Paginas</h1>
    <div class="row">
        <div class="col-md-12" style="display: flex; justify-content:end; padding: 10px;">
            <a class="btn btn-primary" href="/paginas/novocadastro">Novo Cadastro</a>
        </div>
    </div>
    <table class="table">

        <tr>
            <td>ID</td>
            <td>NOME</td>
            <td>DATA</td>
            <td>Render</td>
            <td></td>
        </tr>

        @foreach (var p in paginas)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Nome</td>
                <td>@p.Data</td>

                <td>
                    <a class="btn btn-warning" target="_blank" href="/paginas/@p.Id/Preview">Preview</a>
                </td>

                <td>
                    <a class="btn btn-primary" href="/paginas/@p.Id/alterar">Alterar</a>
                </td>

                <td>
                    <a class="btn btn-danger" href="/paginas/@p.Id/excluir" onclick="ValidaExclusao(@p.Id, event)">Excluir</a>
                </td>
            </tr>
        }
    </table>
</div>